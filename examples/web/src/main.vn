use ""

fn<A, B, C> compose(a: Fn<A, B>, b: Fn<B, C>) -> Fn<A, C> {
    fn(aParams: A) b(a(aParams))
}

struct<T> Signal(value: T, ...);

impl<T> std.ops.AddAssign<T> for Signal<T> {
    fn addAssign(mut this, other: T) -> Self {
        this.value += other
        this
    }
}

@get("/")
fn page() {
    let count = Signal.new();

    <button
        onclick={fn() {
            count += 1
        }}
    >
        Click to increment: {count}
    </button>
}